{
  "name": "GymDemo",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "nodemon --exec babel-node -- index.js",
    "dev": "concurrently \"yarn start\" \"cd client && yarn start\"",
    "debug": "nodemon --inspect --exec babel-node -- index.js",
    "debug-dev": "concurrently \"yarn debug\" \"cd client && yarn start\" ",
    "fix": "standard --fix",
    "build": "cd client && yarn build"
  },
  "dependencies": {
    "apollo-server": "^2.8.1",
    "apollo-server-express": "^2.8.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.4.2",
    "graphql-tools": "^4.0.5",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mongoose": "^5.6.9",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-eslint": "^10.0.2",
    "eslint-plugin-flowtype": "^4.2.0",
    "standard": "^13.1.0"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "/node_modules",
      "/client/config/*"
    ]
  }
}
